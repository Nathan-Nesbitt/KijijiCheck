{

  "manifest_version": 2,
  "name": "KijijiCheck",
  "description": "A tool that collects and compares items on kijiji.",
  "version": "1.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "kijijiCheck@nesbitt.ca",
      "strict_min_version": "54.0a1"
    }
  },
  "background": {
    "scripts": ["background/kijijiCheck_store.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/KijijiCheck.png"
    },
    "default_title": "KijijiCheck",
    "default_popup": "popup/kijijiCheck.html"
  },

  "permissions": ["unlimitedStorage", "storage", "tabs", "activeTab"],

  "content_scripts": [
    {
      "matches": ["https://www.kijiji.ca/v-cars-trucks/*"],
      "js": ["content/kijijiCheck_content.js"]
    }
  ]
}
